<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@drawable/gradient_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="#4C98F4"
            android:id="@+id/job_title"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andersen Lab"
            android:textColor="@color/white"
            android:id="@+id/job_company"
            android:textSize="12dp"
            android:layout_marginTop="1dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/job_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", USA"
            android:textColor="@color/white"
            android:id="@+id/job_location"
            android:textSize="12dp"
            android:layout_marginTop="1dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/job_title"
            app:layout_constraintLeft_toRightOf="@+id/job_company"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full-time"
            android:textColor="@color/white"
            android:id="@+id/job_type"
            android:textSize="12dp"
            android:layout_marginTop="1dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/job_company"
app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="22dp"
            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/outline_auto_delete_24"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:id="@+id/save_job_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>